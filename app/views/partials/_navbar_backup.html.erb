<script>
  function cleanUp() {
    localStorage.removeItem('_guard_i18nextLng')
    localStorage.removeItem('_authing_token')
    localStorage.removeItem('_authing_user')
    localStorage.removeItem('__authing__multiple_accounts')
  }

  function reloadPage(locale) {
    let currentPath = window.location.pathname
    if (currentPath === '/') {
      window.location.pathname = `/${locale}`
    } else {
      window.location.pathname = currentPath.replace(/en|zh/, locale);
    }
  }
</script>
<div>
  <header>
    <nav class="bg-gray-50 border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800">
      <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
        <a href="#" class="flex items-center">
          <%= image_tag "open_csg_logo.png", width: 'auto', height: 34.11, class: "mr-3 h-6 sm:h-9", alt: "OpenCSG Logo" %>
        </a>
        <div class="flex items-center lg:order-2">
          <div class="group inline-block relative">
            <button class="p-2 lg:p-3 text-xs border-0">< <%= I18n.t("#{current_locale}") %> > </button>
            <div class="invisible px-2 pb-3 bg-gray-50 lg:px-3 text-xs border-0 absolute group-hover:visible">
              <a class="block py-2 cursor-pointer" onclick="reloadPage('zh')"><%= I18n.t('zh') %></a>
              <a class="block cursor-pointer" onclick="reloadPage('en')"><%= I18n.t('en') %></a>
            </div>
          </div>
          <p href="#" class="text-gray focus:ring-4 focus:ring-blue-300 font-medium text-sm px-2 lg:px-3 py-2 lg:py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"> <%= current_user.phone %> </p>
          <a href=<%= logout_address %> onclick="cleanUp();" class="text-gray-800 dark:text-white bg-gray-50 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-2 lg:px-3 py-2 lg:py-2.5 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800"><%= t('logout') %></a>
          <button data-collapse-toggle="mobile-menu-2" type="button" class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg hidden sm:block hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="mobile-menu-2" aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
            <svg class="hidden w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
          </button>
        </div>
        <div class="hidden sm:block justify-between items-center w-full lg:flex lg:w-auto lg:order-1" id="mobile-menu-2">
          <ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0 mb:0">
            <li>
              <a href="#" class="block py-2 pr-4 pl-3 rounded-t bg-gray-50 lg:bg-transparent lg:text-[#1a8b7b] lg:p-0 dark:text-white" aria-current="page"><%= t('navbar.applications') %></a>
            </li>
            <li>
              <a href="#" class="block py-2 pr-4 pl-3 rounded-b bg-gray-50 lg:bg-transparent lg:text-[#1a8b7b] lg:p-0 dark:text-white" aria-current="page"><%= t('navbar.billings') %></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <script src="https://unpkg.com/flowbite@1.4.7/dist/flowbite.js"></script>
</div>